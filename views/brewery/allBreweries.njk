{% endblock %}

{% block scripts %}
<script>
/**
 * All Breweries Page - Controller
 * Gestisce ricerca client-side e apertura modal
 */
(function() {
    // Elementi DOM
    const searchToggle = document.getElementById('search-toggle');
    const searchPanel = document.getElementById('search-panel');
    const searchInput = document.getElementById('search-input');
    const searchClear = document.getElementById('search-clear');
    const breweriesGrid = document.getElementById('breweries-grid');
    const breweriesCount = document.getElementById('breweries-count');
    const noResults = document.getElementById('no-results');
    
    // Cache dei birrifici per la modal
    let breweriesCache = [];
    
    // Carica dati birrifici per la modal
    async function loadBreweriesData() {
        try {
            const response = await fetch('/api/breweries/all');
            if (response.ok) {
                const data = await response.json();
                breweriesCache = data.breweries || [];
            }
        } catch (error) {
            console.error('Errore caricamento dati birrifici:', error);
        }
    }
    
    // Toggle pannello ricerca
    searchToggle?.addEventListener('click', () => {
        searchPanel.classList.toggle('show');
        searchToggle.classList.toggle('active');
        if (searchPanel.classList.contains('show')) {
            searchInput.focus();
        }
    });
    
    // Ricerca live
    searchInput?.addEventListener('input', () => {
        const query = searchInput.value.trim().toLowerCase();
        
        // Mostra/nascondi pulsante clear
        searchClear.classList.toggle('show', query.length > 0);
        
        filterBreweries(query);
    });
    
    // Clear ricerca
    searchClear?.addEventListener('click', () => {
        searchInput.value = '';
        searchClear.classList.remove('show');
        filterBreweries('');
        searchInput.focus();
    });
    
    // Filtra birrifici
    function filterBreweries(query) {
        if (!breweriesGrid) return;
        
        const cards = breweriesGrid.querySelectorAll('.brewery-card');
        let visibleCount = 0;
        
        cards.forEach(card => {
            const name = card.dataset.breweryName || '';
            const matches = !query || name.includes(query);
            
            card.style.display = matches ? '' : 'none';
            if (matches) visibleCount++;
        });
        
        // Aggiorna conteggio
        if (breweriesCount) {
            breweriesCount.textContent = visibleCount;
        }
        
        // Mostra/nascondi messaggio "nessun risultato"
        noResults?.classList.toggle('show', visibleCount === 0 && query.length > 0);
        breweriesGrid?.classList.toggle('hidden', visibleCount === 0 && query.length > 0);
    }
    
    // Inizializza
    loadBreweriesData();
    
    // Esponi funzione globale per apertura modal
    window.openBreweryModal = function(breweryId) {
        const brewery = breweriesCache.find(b => b._id === breweryId);
        if (brewery && typeof BreweryInfoModal !== 'undefined') {
            BreweryInfoModal.open(brewery);
        } else {
            // Fallback: ricarica dati e riprova
            fetch('/api/breweries/all')
                .then(res => res.json())
                .then(data => {
                    breweriesCache = data.breweries || [];
                    const found = breweriesCache.find(b => b._id === breweryId);
                    if (found && typeof BreweryInfoModal !== 'undefined') {
                        BreweryInfoModal.open(found);
                    }
                })
                .catch(err => console.error('Errore apertura modal:', err));
        }
    };
})();
</script>
{% endblock %}
