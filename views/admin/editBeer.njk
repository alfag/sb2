// Mappa campo â†’ ID input nel form
const fieldToInputMap = {
    'Stile': 'beerType',
    'Gradazione Alcolica': 'alcoholContent',
    'Descrizione': 'description'
};

/**
 * Naviga al tab corretto e mette il focus sull'input del campo mancante
 */
function goToMissingField(tab, fieldName) {
    // Attiva il tab corretto
    const tabs = document.querySelectorAll('.form-tab');
    const sections = document.querySelectorAll('.form-section');
    tabs.forEach(t => t.classList.remove('active'));
    sections.forEach(s => s.classList.remove('active'));
    
    const targetTab = document.querySelector(`.form-tab[data-tab="${tab}"]`);
    const targetSection = document.querySelector(`[data-section="${tab}"]`);
    if (targetTab) targetTab.classList.add('active');
    if (targetSection) targetSection.classList.add('active');
    
    // Focus sull'input corrispondente
    const inputId = fieldToInputMap[fieldName];
    if (inputId) {
        const input = document.getElementById(inputId);
        if (input) {
            setTimeout(() => {
                input.scrollIntoView({ behavior: 'smooth', block: 'center' });
                input.focus();
                // Evidenzia brevemente il campo
                input.style.transition = 'box-shadow 0.3s, border-color 0.3s';
                input.style.boxShadow = '0 0 0 3px rgba(245, 158, 11, 0.4)';
                input.style.borderColor = '#f59e0b';
                setTimeout(() => {
                    input.style.boxShadow = '';
                    input.style.borderColor = '';
                }, 2000);
            }, 150);
        }
    }
}

/**
 * Aggiornamento dinamico dell'alert campi mancanti
 * Rimuove i badge quando l'utente compila i campi
 */
function updateMissingFieldsAlert() {
    const alert = document.getElementById('incompleteAlert');
    const fieldsList = document.getElementById('incompleteFieldsList');
    if (!alert || !fieldsList) return;
    
    const badges = fieldsList.querySelectorAll('.incomplete-field-badge');
    let remaining = 0;
    
    badges.forEach(badge => {
        const fieldName = badge.dataset.fieldType;
        const inputId = fieldToInputMap[fieldName];
        if (inputId) {
            const input = document.getElementById(inputId);
            if (input && input.value.trim()) {
                badge.style.display = 'none';
            } else {
                badge.style.display = '';
                remaining++;
            }
        }
    });
    
    // Aggiorna titolo con conteggio
    const title = alert.querySelector('.incomplete-alert-title');
    if (title) {
        if (remaining === 0) {
            alert.style.display = 'none';
        } else {
            alert.style.display = '';
            title.innerHTML = `<i class="fas fa-info-circle"></i> Dati Incompleti â€” ${remaining} camp${remaining === 1 ? 'o mancante' : 'i mancanti'}`;
        }
    }
}

