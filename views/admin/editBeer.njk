<script>
// ========================================
// GSR (Google Search Retrieval) per Birre
// ========================================
const beerId = '{{ beer._id }}';
let gsrData = null;

// Mappa dei campi GSR ai campi del form
const gsrFieldMapping = {
    beerName: { formId: 'beerName', label: 'Nome Birra' },
    beerType: { formId: 'beerType', label: 'Stile' },
    beerSubStyle: { formId: 'beerSubStyle', label: 'Sotto-stile' },
    alcoholContent: { formId: 'alcoholContent', label: 'Gradazione Alcolica' },
    ibu: { formId: 'ibu', label: 'IBU' },
    volume: { formId: 'volume', label: 'Volume' },
    color: { formId: 'color', label: 'Colore' },
    fermentation: { formId: 'fermentation', label: 'Fermentazione' },
    servingTemperature: { formId: 'servingTemperature', label: 'Temperatura Servizio' },
    glassType: { formId: 'glassType', label: 'Bicchiere' },
    ingredients: { formId: 'ingredients', label: 'Ingredienti' },
    description: { formId: 'description', label: 'Descrizione' },
    tastingNotes: { formId: 'tastingNotes', label: 'Note Degustazione' },
    aroma: { formId: 'aroma', label: 'Aroma' },
    appearance: { formId: 'appearance', label: 'Aspetto' },
    mouthfeel: { formId: 'mouthfeel', label: 'Sensazione al Palato' },
    bitterness: { formId: 'bitterness', label: 'Amaro' },
    carbonation: { formId: 'carbonation', label: 'Carbonazione' },
    price: { formId: 'price', label: 'Prezzo' },
    availability: { formId: 'availability', label: 'DisponibilitÃ ' },
    nutritionalInfo: { formId: 'nutritionalInfo', label: 'Info Nutrizionali' }
};

// Esegue la ricerca GSR per birra
async function executeGsrSearch() {
    const btn = document.getElementById('btnGsrSearch');
    const originalContent = btn.innerHTML;
    
    btn.disabled = true;
    btn.classList.add('loading');
    btn.innerHTML = '<i class="fas fa-spinner"></i><span>Ricerca in corso...</span>';
    
    try {
        const response = await fetch(`/administrator/beers/${beerId}/gsr-search`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const result = await response.json();
        
        if (result.success && result.data) {
            gsrData = result.data;
            showGsrModal(result.data, result.confidence);
            showToast('Dati trovati! Seleziona quali applicare.', 'success');
        } else {
            showToast(result.error || 'Nessun dato trovato dalla ricerca web', 'warning');
        }
        
        if (result.rateLimitStats) {
            console.log('[GSR Beer] Rate limit:', result.rateLimitStats);
        }
    } catch (error) {
        console.error('[GSR Beer] Errore:', error);
        showToast('Errore durante la ricerca. Riprova piÃ¹ tardi.', 'error');
    } finally {
        btn.disabled = false;
        btn.classList.remove('loading');
        btn.innerHTML = originalContent;
    }
}

// Mostra il modal con i risultati GSR
function showGsrModal(data, confidence) {
    const modal = document.getElementById('gsrModalOverlay');
    const body = document.getElementById('gsrModalBody');
    const confidenceBadge = document.getElementById('gsrConfidence');
    
    confidenceBadge.textContent = `${Math.round((confidence || 0) * 100)}%`;
    
    const fields = [];
    
    for (const [gsrField, mapping] of Object.entries(gsrFieldMapping)) {
        let newValue = data[gsrField];
        
        if (Array.isArray(newValue)) {
            newValue = newValue.join(', ');
        }
        
        if (newValue === null || newValue === undefined || newValue === '') continue;
        
        const formElement = document.getElementById(mapping.formId);
        const currentValue = formElement ? formElement.value.trim() : '';
        
        let status = 'same';
        let statusLabel = 'Uguale';
        
        if (!currentValue) {
            status = 'new';
            statusLabel = 'Nuovo';
        } else if (currentValue !== String(newValue)) {
            status = 'different';
            statusLabel = 'Diverso';
        }
        
        fields.push({ gsrField, formId: mapping.formId, label: mapping.label, currentValue, newValue: String(newValue), status, statusLabel });
    }
    
    // Aggiungi pairing (array)
    if (data.pairing && Array.isArray(data.pairing) && data.pairing.length > 0) {
        const newValue = data.pairing.join(', ');
        const formElement = document.getElementById('pairing');
        const currentValue = formElement ? formElement.value.trim() : '';
        const status = !currentValue ? 'new' : (currentValue !== newValue ? 'different' : 'same');
        fields.push({
            gsrField: 'pairing', formId: 'pairing', label: 'Abbinamenti',
            currentValue, newValue, status,
            statusLabel: status === 'new' ? 'Nuovo' : (status === 'different' ? 'Diverso' : 'Uguale')
        });
    }
    
    let html = '';
    
    if (fields.length === 0) {
        html = '<div class="gsr-no-data">Nessun dato disponibile.</div>';
    } else {
        for (const f of fields) {
            const checked = f.status !== 'same' ? 'checked' : '';
            html += `
                <div class="gsr-field-item status-${f.status}">
                    <div class="gsr-field-header">
                        <input type="checkbox" class="gsr-field-checkbox" data-field="${f.gsrField}" data-form-id="${f.formId}" ${checked} onchange="updateSelectionCount()">
                        <span class="gsr-field-name">${f.label}</span>
                        <span class="gsr-status-badge ${f.status}">${f.statusLabel}</span>
                    </div>
                    <div class="gsr-field-values">
                        <div class="gsr-value-col">
                            <div class="gsr-value-label">Attuale</div>
                            <div class="gsr-value-text ${!f.currentValue ? 'empty' : ''}">${f.currentValue ? escapeHtml(f.currentValue) : '(vuoto)'}</div>
                        </div>
                        <div class="gsr-value-col">
                            <div class="gsr-value-label">Recuperato</div>
                            <div class="gsr-value-text">${escapeHtml(f.newValue)}</div>
                        </div>
                    </div>
                </div>
            `;
        }
    }
    
    body.innerHTML = html;
    modal.classList.add('active');
    updateSelectionCount();
}

function updateSelectionCount() {
    const checkboxes = document.querySelectorAll('.gsr-field-checkbox:checked');
    const countEl = document.getElementById('gsrSelectionCount');
    if (countEl) countEl.textContent = checkboxes.length;
}

function closeGsrModal() {
    document.getElementById('gsrModalOverlay').classList.remove('active');
}

function toggleAllGsrFields() {
    const checkboxes = document.querySelectorAll('.gsr-field-checkbox');
    const allChecked = Array.from(checkboxes).every(cb => cb.checked);
    checkboxes.forEach(cb => cb.checked = !allChecked);
    updateSelectionCount();
}

function applyGsrData() {
    if (!gsrData) { showToast('Nessun dato da applicare', 'error'); return; }
    
    const checkboxes = document.querySelectorAll('.gsr-field-checkbox:checked');
    let appliedCount = 0;
    
    checkboxes.forEach(cb => {
        const gsrField = cb.dataset.field;
        const formId = cb.dataset.formId;
        let value = gsrData[gsrField];
        
        if (Array.isArray(value)) value = value.join(', ');
        
        const formElement = document.getElementById(formId);
        if (formElement && value !== null && value !== undefined) {
            formElement.value = value;
            appliedCount++;
            
            formElement.style.transition = 'background-color 0.3s';
            formElement.style.backgroundColor = '#dcfce7';
            setTimeout(() => { formElement.style.backgroundColor = ''; }, 1500);
        }
    });
    
    closeGsrModal();
    
    if (appliedCount > 0) {
        showToast(`${appliedCount} campi aggiornati! Ricorda di salvare.`, 'success');
    } else {
        showToast('Nessun campo selezionato da applicare', 'info');
    }
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

