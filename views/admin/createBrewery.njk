{% extends "../layout.njk" %}

{% block content %}
<!-- Modern Create Brewery Page -->
<div class="modern-page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12V7a1 1 0 011-1h4a1 1 0 011 1v5M8 21h8M12 3v3m0 15v-9m0 0l-2 2m2-2l2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="header-text">
                <h1 class="page-title">{{ title }}</h1>
                <p class="page-subtitle">Crea un nuovo birrificio nel sistema</p>
            </div>
        </div>
        
        <!-- Modern Breadcrumb -->
        <nav class="modern-breadcrumb" aria-label="breadcrumb">
            <ol class="breadcrumb-list">
                <li class="breadcrumb-item">
                    <a href="/administrator/breweries" class="breadcrumb-link">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        Birrifici
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/administrator/breweries" class="breadcrumb-link">Birrifici</a>
                </li>
                <li class="breadcrumb-item active">Crea Nuovo</li>
            </ol>
        </nav>
    </div>

    <!-- Flash Messages -->
    {% if message.success %}
        <div class="alert alert-success modern-alert" role="alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>{{ message.success[0] }}</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    {% endif %}
    
    {% if message.error %}
        <div class="alert alert-danger modern-alert" role="alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>{{ message.error[0] }}</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    {% endif %}
    <!-- Modern Form Container -->
    <div class="modern-form-container">
        <form method="POST" action="/administrator/breweries/new" class="modern-form">
            
            <!-- Basic Information Section -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2M12 11a4 4 0 100-8 4 4 0 000 8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="section-text">
                        <h3 class="section-title">Informazioni Base</h3>
                        <p class="section-subtitle">Dati principali del birrificio</p>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="breweryName" class="form-label required">Nome Birrificio</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5 12V7a1 1 0 011-1h4a1 1 0 011 1v5M8 21h8M12 3v3m0 15v-9m0 0l-2 2m2-2l2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="breweryName" name="breweryName" required placeholder="Es. Birrificio della Montagna">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryEmail" class="form-label">Email</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="email" class="form-input" id="breweryEmail" name="breweryEmail" placeholder="info@birrificio.com">
                            </div>
                        </div>
                        
                        <div class="form-group span-full">
                            <label for="breweryDescription" class="form-label">Descrizione</label>
                            <div class="textarea-wrapper">
                                <textarea class="form-textarea" id="breweryDescription" name="breweryDescription" rows="3" placeholder="Descrivi il birrificio, la sua missione e i valori..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Legal Information Section -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="section-text">
                        <h3 class="section-title">Dati Legali</h3>
                        <p class="section-subtitle">Informazioni fiscali e legali</p>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="form-grid form-grid-3">
                        <div class="form-group">
                            <label for="breweryFiscalCode" class="form-label">Codice Fiscale</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="breweryFiscalCode" name="breweryFiscalCode" placeholder="ABCDEF12A34B567C">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryREAcode" class="form-label">Codice REA</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="breweryREAcode" name="breweryREAcode" placeholder="MI-123456">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryacciseCode" class="form-label">Codice Accise</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="breweryacciseCode" name="breweryacciseCode" placeholder="IT123456789">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryFund" class="form-label">Fondo</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2v20M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="breweryFund" name="breweryFund" placeholder="€ 10.000">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="foundingYear" class="form-label">Anno di Fondazione</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                                    <line x1="16" y1="2" x2="16" y2="6" stroke="currentColor" stroke-width="2"/>
                                    <line x1="8" y1="2" x2="8" y2="6" stroke="currentColor" stroke-width="2"/>
                                    <line x1="3" y1="10" x2="21" y2="10" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                <input type="number" class="form-input" id="foundingYear" name="foundingYear" min="1800" max="2025" placeholder="2020">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Contact & Location Section -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <div class="section-text">
                        <h3 class="section-title">Indirizzi e Contatti</h3>
                        <p class="section-subtitle">Informazioni di contatto e localizzazione</p>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="breweryLegalAddress" class="form-label">Indirizzo Legale</label>
                            <div class="textarea-wrapper">
                                <textarea class="form-textarea" id="breweryLegalAddress" name="breweryLegalAddress" rows="2" placeholder="Via Roma 123, 20100 Milano MI"></textarea>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryProductionAddress" class="form-label">Indirizzo Produzione</label>
                            <div class="textarea-wrapper">
                                <textarea class="form-textarea" id="breweryProductionAddress" name="breweryProductionAddress" rows="2" placeholder="Via della Birra 456, 20100 Milano MI"></textarea>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryPhoneNumber" class="form-label">Telefono</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22 16.92v3a2 2 0 01-2.18 2A19.79 19.79 0 015.63 5.63 2 2 0 017.6 3.82h3a2 2 0 012 1.72.5.5 0 010 .12c.44 1.37 1.89 2.86 3.4 3.4a2 2 0 011.72 2V16.92a2 2 0 01-.88 1.66l-1 .66a2 2 0 01-2.24 0l-1-.66A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="tel" class="form-input" id="breweryPhoneNumber" name="breweryPhoneNumber" placeholder="+39 02 123456">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="breweryWebsite" class="form-label">Sito Web</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                                    <line x1="2" y1="12" x2="22" y2="12" stroke="currentColor" stroke-width="2"/>
                                    <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                <input type="url" class="form-input" id="breweryWebsite" name="breweryWebsite" placeholder="https://birrificio.com">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Production Info & Details Section -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 3l4 8 5-3-5 11-4-8-5 3 5-11z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="section-text">
                        <h3 class="section-title">Informazioni Produttive & Dettagli</h3>
                        <p class="section-subtitle">Capacità produttiva, storia e riconoscimenti</p>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="form-grid form-grid-3">
                        <div class="form-group">
                            <label for="brewerySize" class="form-label">Dimensione Birrificio</label>
                            <div class="select-wrapper">
                                <select class="form-select" id="brewerySize" name="brewerySize">
                                    <option value="">Seleziona dimensione...</option>
                                    <option value="microbirrificio">Microbirrificio</option>
                                    <option value="birrificio artigianale">Birrificio Artigianale</option>
                                    <option value="industriale">Industriale</option>
                                </select>
                                <svg class="select-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <polyline points="6,9 12,15 18,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="employeeCount" class="form-label">Numero Dipendenti</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="employeeCount" name="employeeCount" placeholder="es. 5-10">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="productionVolume" class="form-label">Volume Produzione</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5 12V7a1 1 0 011-1h4a1 1 0 011 1v5M8 21h8M12 3v3m0 15v-9m0 0l-2 2m2-2l2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="productionVolume" name="productionVolume" placeholder="es. 1000 hl/anno">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="distributionArea" class="form-label">Area Distribuzione</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                                    <line x1="2" y1="12" x2="22" y2="12" stroke="currentColor" stroke-width="2"/>
                                    <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                <input type="text" class="form-input" id="distributionArea" name="distributionArea" placeholder="Regionale, Nazionale, Internazionale">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="masterBrewer" class="form-label">Mastro Birraio</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2M12 11a4 4 0 100-8 4 4 0 000 8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="masterBrewer" name="masterBrewer" placeholder="Nome del mastro birraio">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="mainProducts" class="form-label">Prodotti Principali</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5 12V7a1 1 0 011-1h4a1 1 0 011 1v5M8 21h8M12 3v3m0 15v-9m0 0l-2 2m2-2l2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="mainProducts" name="mainProducts" placeholder="IPA, Lager, Stout (separa con virgole)">
                            </div>
                        </div>
                        
                        <div class="form-group span-2">
                            <label for="awards" class="form-label">Premi e Riconoscimenti</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="text" class="form-input" id="awards" name="awards" placeholder="World Beer Cup 2021, Italian Beer Award 2020 (separa con virgole)">
                            </div>
                        </div>
                        
                        <div class="form-group span-full">
                            <label for="breweryHistory" class="form-label">Storia del Birrificio</label>
                            <div class="textarea-wrapper">
                                <textarea class="form-textarea" id="breweryHistory" name="breweryHistory" rows="3" placeholder="Racconta la storia, l'origine e l'evoluzione del birrificio..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Social Media Section -->
            <div class="form-section">
                <div class="section-header">
                    <div class="section-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="section-text">
                        <h3 class="section-title">Social Media</h3>
                        <p class="section-subtitle">Presenza online e social network</p>
                    </div>
                </div>
                
                <div class="section-content">
                    <div class="form-grid form-grid-3">
                        <div class="form-group">
                            <label for="facebook" class="form-label">Facebook</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <input type="url" class="form-input" id="facebook" name="facebook" placeholder="https://facebook.com/breweryname">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="instagram" class="form-label">Instagram</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                                    <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" stroke="currentColor" stroke-width="2"/>
                                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                <input type="url" class="form-input" id="instagram" name="instagram" placeholder="https://instagram.com/breweryname">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="youtube" class="form-label">YouTube</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22.54 6.42a2.78 2.78 0 00-1.94-2A29 29 0 0012 4a29 29 0 00-8.6.46 2.78 2.78 0 00-1.94 2A29 29 0 001 12a29 29 0 00.46 5.58 2.78 2.78 0 001.94 2A29 29 0 0012 20a29 29 0 008.6-.46 2.78 2.78 0 001.94-2A29 29 0 0023 12a29 29 0 00-.46-5.58z" stroke="currentColor" stroke-width="2"/>
                                    <polygon points="9.75,8.52 15.5,12 9.75,15.48" stroke="currentColor" stroke-width="2"/>
