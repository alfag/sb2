function testLogoUrl() {
    const urlInput = document.getElementById('breweryLogo');
    const logoPreview = document.getElementById('logoPreview');
    const noLogoPlaceholder = document.getElementById('noLogoPlaceholder');
    const url = urlInput.value.trim();
    
    if (!url) {
        showToast('Inserisci un URL del logo da testare', 'warning');
        return;
    }
    
    // Mostra indicatore di caricamento
    const container = document.getElementById('logoPreviewContainer');
    container.style.opacity = '0.5';
    
    // Crea nuova immagine per testare l'URL
    const testImg = new Image();
    testImg.onload = function() {
        logoPreview.src = url;
        logoPreview.style.display = 'block';
        noLogoPlaceholder.style.display = 'none';
        container.style.opacity = '1';
        showToast('Logo caricato con successo!', 'success');
    };
    testImg.onerror = function() {
        container.style.opacity = '1';
        showToast('Impossibile caricare l\'immagine. Verifica l\'URL.', 'error');
    };
    testImg.src = url;
}

