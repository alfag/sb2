<script>
// ========================================
// GSR (Google Search Retrieval) Functions
// ========================================
const breweryId = '{{ brewery._id }}';
let gsrData = null; // Memorizza i dati GSR per applicarli successivamente

// Mappa dei campi GSR ai campi del form
const gsrFieldMapping = {
    breweryName: { formId: 'breweryName', label: 'Nome Birrificio' },
    breweryLogo: { formId: 'breweryLogo', label: 'Logo URL' },
    breweryWebsite: { formId: 'breweryWebsite', label: 'Sito Web' },
    breweryLegalAddress: { formId: 'breweryLegalAddress', label: 'Indirizzo Legale' },
    breweryEmail: { formId: 'breweryEmail', label: 'Email' },
    breweryPhoneNumber: { formId: 'breweryPhoneNumber', label: 'Telefono' },
    breweryDescription: { formId: 'breweryDescription', label: 'Descrizione' },
    foundingYear: { formId: 'foundingYear', label: 'Anno Fondazione' },
    brewerySize: { formId: 'brewerySize', label: 'Dimensione' },
    productionVolume: { formId: 'productionVolume', label: 'Volume Produzione' },
    breweryHistory: { formId: 'breweryHistory', label: 'Storia' },
    breweryFiscalCode: { formId: 'breweryFiscalCode', label: 'Partita IVA' },
    reaCode: { formId: 'breweryREAcode', label: 'Codice REA' },
    acciseCode: { formId: 'breweryacciseCode', label: 'Codice Accise' },
    pecEmail: { formId: 'pecEmail', label: 'PEC' },
    shareCapital: { formId: 'breweryFund', label: 'Capitale Sociale' },
    // Social media (oggetto annidato)
    'brewerySocialMedia.facebook': { formId: 'facebook', label: 'Facebook' },
    'brewerySocialMedia.instagram': { formId: 'instagram', label: 'Instagram' },
    'brewerySocialMedia.twitter': { formId: 'twitter', label: 'Twitter/X' },
    'brewerySocialMedia.linkedin': { formId: 'linkedin', label: 'LinkedIn' },
    'brewerySocialMedia.youtube': { formId: 'youtube', label: 'YouTube' }
};

// Esegue la ricerca GSR
async function executeGsrSearch() {
    const btn = document.getElementById('btnGsrSearch');
    const originalContent = btn.innerHTML;
    
    // Stato loading
    btn.disabled = true;
    btn.classList.add('loading');
    btn.innerHTML = '<i class="fas fa-spinner"></i><span>Ricerca in corso...</span>';
    
    try {
        const response = await fetch(`/administrator/breweries/${breweryId}/gsr-search`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const result = await response.json();
        
        if (result.success && result.data) {
            gsrData = result.data;
            showGsrModal(result.data, result.confidence);
            showToast('Dati trovati! Seleziona quali applicare.', 'success');
        } else {
            showToast(result.error || 'Nessun dato trovato dalla ricerca web', 'warning');
        }
        
        // Mostra info rate limit se disponibile
        if (result.rateLimitStats) {
            console.log('[GSR] Rate limit:', result.rateLimitStats);
        }
        
    } catch (error) {
        console.error('[GSR] Errore:', error);
        showToast('Errore durante la ricerca. Riprova piÃ¹ tardi.', 'error');
    } finally {
        // Ripristina pulsante
        btn.disabled = false;
        btn.classList.remove('loading');
        btn.innerHTML = originalContent;
    }
}

// Mostra il modal con i risultati GSR
function showGsrModal(data, confidence) {
    const modal = document.getElementById('gsrModalOverlay');
    const body = document.getElementById('gsrModalBody');
    const confidenceBadge = document.getElementById('gsrConfidence');
    
    confidenceBadge.textContent = `${Math.round((confidence || 0) * 100)}%`;
    
    const getNestedValue = (obj, path) => {
        return path.split('.').reduce((o, p) => o && o[p], obj);
    };
    
    const fields = [];
    
    for (const [gsrField, mapping] of Object.entries(gsrFieldMapping)) {
        let newValue = getNestedValue(data, gsrField);
        
        if (Array.isArray(newValue)) {
            newValue = newValue.join(', ');
        }
        
        if (newValue === null || newValue === undefined || newValue === '') {
            continue;
        }
        
        const formElement = document.getElementById(mapping.formId);
        const currentValue = formElement ? formElement.value.trim() : '';
        
        let status = 'same';
        let statusLabel = 'Uguale';
        
        if (!currentValue) {
            status = 'new';
            statusLabel = 'Nuovo';
        } else if (currentValue !== String(newValue)) {
            status = 'different';
            statusLabel = 'Diverso';
        }
        
        fields.push({
            gsrField,
            formId: mapping.formId,
            label: mapping.label,
            currentValue,
            newValue: String(newValue),
            status,
            statusLabel
        });
    }
    
    // Aggiungi mainProducts
    if (data.mainProducts && Array.isArray(data.mainProducts) && data.mainProducts.length > 0) {
        const newValue = data.mainProducts.join(', ');
        const formElement = document.getElementById('mainProducts');
        const currentValue = formElement ? formElement.value.trim() : '';
        const status = !currentValue ? 'new' : (currentValue !== newValue ? 'different' : 'same');
        
        fields.push({
            gsrField: 'mainProducts',
            formId: 'mainProducts',
            label: 'Prodotti Principali',
            currentValue,
            newValue,
            status,
            statusLabel: status === 'new' ? 'Nuovo' : (status === 'different' ? 'Diverso' : 'Uguale')
        });
    }
    
    // Aggiungi awards
    if (data.awards && Array.isArray(data.awards) && data.awards.length > 0) {
        const newValue = data.awards.join(', ');
        const formElement = document.getElementById('awards');
        const currentValue = formElement ? formElement.value.trim() : '';
        const status = !currentValue ? 'new' : (currentValue !== newValue ? 'different' : 'same');
        
        fields.push({
            gsrField: 'awards',
            formId: 'awards',
            label: 'Premi e Riconoscimenti',
            currentValue,
            newValue,
            status,
            statusLabel: status === 'new' ? 'Nuovo' : (status === 'different' ? 'Diverso' : 'Uguale')
        });
    }
    
    let html = '';
    
    if (fields.length === 0) {
        html = '<div class="gsr-no-data">Nessun dato disponibile.</div>';
    } else {
        for (const f of fields) {
            const checked = f.status !== 'same' ? 'checked' : '';
            
            html += `
                <div class="gsr-field-item status-${f.status}">
                    <div class="gsr-field-header">
                        <input type="checkbox" class="gsr-field-checkbox" 
                               data-field="${f.gsrField}" data-form-id="${f.formId}" 
                               ${checked} onchange="updateSelectionCount()">
                        <span class="gsr-field-name">${f.label}</span>
                        <span class="gsr-status-badge ${f.status}">${f.statusLabel}</span>
                    </div>
                    <div class="gsr-field-values">
                        <div class="gsr-value-col">
                            <div class="gsr-value-label">Attuale</div>
                            <div class="gsr-value-text ${!f.currentValue ? 'empty' : ''}">${f.currentValue ? escapeHtml(f.currentValue) : '(vuoto)'}</div>
                        </div>
                        <div class="gsr-value-col">
                            <div class="gsr-value-label">Recuperato</div>
                            <div class="gsr-value-text">${escapeHtml(f.newValue)}</div>
                        </div>
                    </div>
                </div>
            `;
        }
    }
    
    body.innerHTML = html;
    modal.classList.add('active');
    updateSelectionCount();
}

// Aggiorna il contatore dei campi selezionati
function updateSelectionCount() {
    const checkboxes = document.querySelectorAll('.gsr-field-checkbox:checked');
