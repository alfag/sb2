// Applica i dati GSR selezionati al form
function applyGsrData() {
    if (!gsrData) {
        showToast('Nessun dato da applicare', 'error');
        return;
    }
    
    const checkboxes = document.querySelectorAll('.gsr-field-checkbox:checked');
    let appliedCount = 0;
    
    // Helper per ottenere valore annidato
    const getNestedValue = (obj, path) => {
        return path.split('.').reduce((o, p) => o && o[p], obj);
    };
    
    checkboxes.forEach(cb => {
        const gsrField = cb.dataset.field;
        const formId = cb.dataset.formId;
        let value = getNestedValue(gsrData, gsrField);
        
        // Gestisci array
        if (Array.isArray(value)) {
            value = value.join(', ');
        }
        
        const formElement = document.getElementById(formId);
        if (formElement && value !== null && value !== undefined) {
            formElement.value = value;
            appliedCount++;
            
            // Evidenzia brevemente il campo aggiornato
            formElement.style.transition = 'background-color 0.3s';
            formElement.style.backgroundColor = '#dcfce7';
            setTimeout(() => {
                formElement.style.backgroundColor = '';
            }, 1500);
        }
    });
    
    // Se Ã¨ stato aggiornato il logo, aggiorna anche l'anteprima
    const logoCheckbox = document.querySelector('.gsr-field-checkbox[data-field="breweryLogo"]:checked');
    if (logoCheckbox && gsrData.breweryLogo) {
        testLogoUrl();
        
        // ðŸŽ¨ Applica classe per logo chiaro se logoIsLight Ã¨ true
        const logoPreviewContainer = document.getElementById('logoPreviewContainer');
        const logoPreviewImg = document.getElementById('logoPreview');
        if (gsrData.logoIsLight === true) {
            logoPreviewContainer.classList.add('has-light-logo');
            logoPreviewImg.classList.add('light-logo');
            console.log('[GSR] ðŸŽ¨ Logo chiaro rilevato - applicato sfondo scuro');
        } else {
            logoPreviewContainer.classList.remove('has-light-logo');
            logoPreviewImg.classList.remove('light-logo');
        }
    }
    
    closeGsrModal();
    
    if (appliedCount > 0) {
        showToast(`${appliedCount} campi aggiornati! Ricorda di salvare.`, 'success');
        // ðŸ”„ Aggiorna l'alert di incompletezza dopo aver applicato i dati GSR
        updateIncompleteAlert();
    } else {
        showToast('Nessun campo selezionato da applicare', 'info');
    }
}

// ========================================
// Funzione per aggiornare dinamicamente l'alert "Dati Incompleti"
// Chiamata dopo l'applicazione dei dati GSR o modifiche ai campi
// ========================================
function updateIncompleteAlert() {
    const missingFields = [];
    
    // Verifica i campi obbligatori per completezza
    const emailField = document.getElementById('breweryEmail');
    if (!emailField || !emailField.value.trim()) {
        missingFields.push({ field: 'Email', icon: 'fa-envelope' });
    }
    
    const websiteField = document.getElementById('breweryWebsite');
    if (!websiteField || !websiteField.value.trim()) {
        missingFields.push({ field: 'Sito Web', icon: 'fa-globe' });
    }
    
    const phoneField = document.getElementById('breweryPhoneNumber');
    if (!phoneField || !phoneField.value.trim()) {
        missingFields.push({ field: 'Telefono', icon: 'fa-phone' });
    }
    
    // Verifica logo valido
    const logoField = document.getElementById('breweryLogo');
    const logoValue = logoField ? logoField.value.trim().toLowerCase() : '';
    const invalidPatterns = ['placeholder', 'default', 'no-logo', 'nologo', 'missing', 'blank', 'empty', 'null', 'undefined'];
    const hasValidLogo = logoValue && !invalidPatterns.some(pattern => logoValue.includes(pattern));
    
    if (!hasValidLogo) {
        missingFields.push({ field: 'Logo', icon: 'fa-image' });
    }
    
    // Aggiorna l'UI dell'alert
    const alertElement = document.getElementById('incompleteAlert');
    const fieldsListElement = document.getElementById('incompleteFieldsList');
    
    if (missingFields.length > 0) {
        // Mostra l'alert con i campi mancanti
        fieldsListElement.innerHTML = missingFields.map(f => 
            `<span class="incomplete-field-badge" data-field-type="${f.field}">
                <i class="fas ${f.icon}"></i> ${f.field}
            </span>`
        ).join('');
        alertElement.style.display = 'flex';
    } else {
        // Nascondi l'alert se tutti i campi sono completi
        alertElement.style.display = 'none';
        // Mostra toast di successo
        showToast('ðŸŽ‰ Tutti i dati principali sono completi!', 'success');
    }
}

