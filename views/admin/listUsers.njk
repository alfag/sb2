{% extends "../layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block scripts %}
<script src="/js/adminUserFilters.js"></script>
{% endblock %}

{% block content %}
<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="fas fa-users me-2 text-primary"></i>
                    {{ title }}
                </h1>
                <div>
                    <a href="/administrator/users/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nuovo Utente
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Messaggi flash -->
    {% if message.success %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            {{ message.success[0] }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    
    {% if message.error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            {{ message.error[0] }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    
    <!-- Statistiche rapide con filtro -->
    {% if users.length > 0 %}
        <div class="row mb-4">
            <!-- Totali -->
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="card border-primary h-100 role-filter-card" data-role="all" style="cursor: pointer;" title="Clicca per mostrare tutti gli utenti">
                    <div class="card-body text-center py-2">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-users text-primary me-2"></i>
                            <div>
                                <h4 class="mb-0">{{ stats.totalUsers }}</h4>
                                <small class="text-muted">Totali</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Clienti -->
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="card border-success h-100 role-filter-card" data-role="customer" style="cursor: pointer;" title="Clicca per filtrare solo i clienti">
                    <div class="card-body text-center py-2">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-user-check text-success me-2"></i>
                            <div>
                                <h4 class="mb-0">{{ stats.customers }}</h4>
                                <small class="text-muted">Clienti</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Birrifici -->
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="card border-warning h-100 role-filter-card" data-role="brewery" style="cursor: pointer;" title="Clicca per filtrare solo i birrifici">
                    <div class="card-body text-center py-2">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-industry text-warning me-2"></i>
                            <div>
                                <h4 class="mb-0">{{ stats.breweries }}</h4>
                                <small class="text-muted">Birrifici</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Administrator -->
            <div class="col-md-3 col-sm-6 mb-2">
                <div class="card border-danger h-100 role-filter-card" data-role="administrator" style="cursor: pointer;" title="Clicca per filtrare solo gli amministratori">
                    <div class="card-body text-center py-2">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-user-shield text-danger me-2"></i>
                            <div>
                                <h4 class="mb-0">{{ stats.administrators }}</h4>
                                <small class="text-muted">Admin</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Indicatore filtro attivo -->
        <div class="row mb-3" id="filter-indicator" style="display: none;">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center justify-content-between">
                    <div>
                        <i class="fas fa-filter me-2"></i>
                        <span id="filter-message">Filtro attivo</span>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="clearRoleFilter()">
                        <i class="fas fa-times me-1"></i>Rimuovi Filtro
                    </button>
                </div>
            </div>
        </div>
    {% endif %}
    
    <!-- Tabella utenti -->
    <div class="row">
        <div class="col-12">
            {% if users.length > 0 %}
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center align-middle"><i class="fas fa-user"></i> Username</th>
                                        <th class="text-center align-middle"><i class="fas fa-tags"></i> Ruoli</th>
                                        <th class="text-center align-middle"><i class="fas fa-star"></i> Ruolo Attivo</th>
                                        <th class="text-center align-middle"><i class="fas fa-cogs"></i> Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                    <tr class="user-row" data-user-roles="{{ user.role.join(',') }}">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <span class="avatar-title rounded-circle 
                                                        {% if user.role.includes('administrator') %}bg-danger
                                                        {% elif user.role.includes('brewery') %}bg-warning
                                                        {% else %}bg-primary
                                                        {% endif %}">
                                                        {% if user.role.includes('administrator') %}
                                                            <i class="fas fa-user-shield"></i>
                                                        {% elif user.role.includes('brewery') %}
                                                            <i class="fas fa-industry"></i>
                                                        {% else %}
                                                            <i class="fas fa-user"></i>
                                                        {% endif %}
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">{{ user.username }}</h6>
                                                    {% if user._id.toString() == currentUser._id.toString() %}
                                                        <small class="text-success">
                                                            <i class="fas fa-check-circle"></i> Tu
                                                        </small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            {% for role in user.role %}
                                                <span class="badge 
                                                    {% if role == 'administrator' %}bg-danger
                                                    {% elif role == 'brewery' %}bg-warning text-dark
                                                    {% elif role == 'customer' %}bg-primary
                                                    {% else %}bg-secondary
                                                    {% endif %} me-1">
                                                    {% if role == 'administrator' %}
                                                        <i class="fas fa-user-shield me-1"></i>Admin
                                                    {% elif role == 'brewery' %}
                                                        <i class="fas fa-industry me-1"></i>Birrificio
                                                    {% elif role == 'customer' %}
                                                        <i class="fas fa-user me-1"></i>Cliente
                                                    {% else %}
                                                        {{ role }}
                                                    {% endif %}
                                                </span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if user.defaultRole %}
                                                <span class="badge bg-info">
                                                    {% if user.defaultRole == 'administrator' %}
                                                        <i class="fas fa-user-shield me-1"></i>Admin
                                                    {% elif user.defaultRole == 'brewery' %}
                                                        <i class="fas fa-industry me-1"></i>Birrificio
                                                    {% elif user.defaultRole == 'customer' %}
                                                        <i class="fas fa-user me-1"></i>Cliente
                                                    {% else %}
                                                        {{ user.defaultRole }}
                                                    {% endif %}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">Non impostato</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/administrator/users/update?userUpdateId={{ user._id }}" 
                                                   class="btn btn-outline-primary"
                                                   title="Modifica utente">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                {% if user._id.toString() != currentUser._id.toString() %}
                                                <button type="button" 
                                                        class="btn btn-outline-danger"
                                                        onclick="confirmDeleteUser('{{ user._id }}', '{{ user.username }}')"
                                                        title="Elimina utente">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                                {% else %}
                                                <button type="button" 
                                                        class="btn btn-outline-secondary"
                                                        title="Non puoi eliminare te stesso"
                                                        disabled>
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <!-- Stato vuoto -->
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-users fa-4x text-muted"></i>
                        </div>
                        <h4 class="text-muted">Nessun Utente Trovato</h4>
                        <p class="text-muted mb-4">
                            Non ci sono utenti registrati nel sistema.
                        </p>
                        <a href="/administrator/users/new" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crea Primo Utente
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Modal per conferma eliminazione -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Conferma Eliminazione
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Sei sicuro di voler eliminare l'utente <strong id="deleteUserName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Attenzione:</strong> Questa azione non può essere annullata e eliminerà permanentemente:
                    <ul class="mb-0 mt-2">
                        <li>L'account utente</li>
                        <li>Tutti i dati associati</li>
                        <li>Le recensioni create dall'utente</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form id="deleteUserForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Elimina Definitivamente
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
}

.avatar-title {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
}

.table th {
    font-weight: 600;
    border-bottom: 2px solid #dee2e6;
}

.badge {
    font-size: 0.75em;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
}

/* Stili per le card filtro */
.role-filter-card {
    transition: all 0.3s ease;
}

.role-filter-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

.role-filter-card.active {
    box-shadow: 0 0 20px rgba(0,123,255,0.5);
    transform: translateY(-3px);
}

.role-filter-card.active .card-body {
    background: linear-gradient(135deg, rgba(0,123,255,0.1) 0%, rgba(0,123,255,0.05) 100%);
}

/* Animazioni per le righe filtrate */
.user-row {
    transition: opacity 0.3s ease;
}

.user-row.filtered-out {
    opacity: 0.3;
    display: none;
}
</style>

<script>
// Funzione per confermare l'eliminazione dell'utente
function confirmDeleteUser(userId, username) {
    document.getElementById('deleteUserName').textContent = username;
    document.getElementById('deleteUserForm').action = '/administrator/users/delete/' + userId;
    
    const modal = new bootstrap.Modal(document.getElementById('deleteUserModal'));
    modal.show();
}
</script>
{% endblock %}