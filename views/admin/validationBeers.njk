{% extends "layout.njk" %}

{% block title %}Validazione Birre - Administrator{% endblock %}

{% block content %}
<div class="validation-container">
    <a href="/administrator" class="back-button">
        <i class="fas fa-arrow-left"></i>
        <span>Dashboard</span>
    </a>
    
    <div class="validation-header">
        <h1>üç∫ Validazione Birre</h1>
        <p class="subtitle">Rivedi e approva le birre estratte automaticamente</p>
    </div>

    <!-- Badge conteggio -->
    <div class="validation-stats">
        <div class="stat-card">
            <span class="stat-number">{{ count }}</span>
            <span class="stat-label">In Attesa</span>
        </div>
        <div class="stat-card">
            <span class="stat-number" id="validatedToday">-</span>
            <span class="stat-label">Validati Oggi</span>
        </div>
    </div>

    {% if count > 0 %}
    <!-- Lista birre -->
    <div id="beersList" class="beers-list">
        {% for beer in beers %}
        <div class="brewery-card" id="beer-{{ beer._id }}">
            <div class="brewery-card-header">
                <div class="brewery-info">
                    <h3>{{ beer.beerName or 'Nome non disponibile' }}</h3>
                    <p style="color: #666; margin-top: 0.5rem;">Birrificio: {{ beer.brewery.breweryName if beer.brewery else 'Sconosciuto' }}</p>
                    <span class="brewery-badge {% if beer.dataSource == 'web_scraped' or beer.dataSource == 'web_scraped+ai' %}badge-scraped{% else %}badge-ai{% endif %}">
                        {% if beer.dataSource == 'web_scraped' or beer.dataSource == 'web_scraped+ai' %}Web Scraping{% else %}AI Extract{% endif %}
                    </span>
                </div>
            </div>
            <div class="brewery-details">
                {% if beer.beerType %}
                <div class="detail-item">
                    <span class="detail-icon">üè∑Ô∏è</span>
                    <div class="detail-content">
                        <div class="detail-label">Tipo</div>
                        <div class="detail-value">{{ beer.beerType }}</div>
                    </div>
                </div>
                {% endif %}
                {% if beer.alcoholContent %}
                <div class="detail-item">
                    <span class="detail-icon">üå°Ô∏è</span>
                    <div class="detail-content">
                        <div class="detail-label">Gradazione</div>
                        <div class="detail-value">{{ beer.alcoholContent }}%</div>
                    </div>
                </div>
                {% endif %}
                {% if beer.ibu %}
                <div class="detail-item">
                    <span class="detail-icon">üî¢</span>
                    <div class="detail-content">
                        <div class="detail-label">IBU</div>
                        <div class="detail-value">{{ beer.ibu }}</div>
                    </div>
                </div>
                {% endif %}
                {% if beer.description %}
                <div class="detail-item" style="grid-column: 1 / -1;">
                    <span class="detail-icon">üìù</span>
                    <div class="detail-content">
                        <div class="detail-label">Descrizione</div>
                        <div class="detail-value">{{ beer.description | truncate(200) }}</div>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="brewery-actions">
                <button class="btn btn-approve" onclick="approveBeer('{{ beer._id }}')">‚úÖ Approva</button>
                <button class="btn btn-edit" onclick="editBeer('{{ beer._id }}')">‚úèÔ∏è Modifica</button>
                <button class="btn btn-reject" onclick="rejectBeer('{{ beer._id }}')">‚ùå Rifiuta</button>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <!-- Empty state -->
    <div class="empty-state">
        <div class="empty-icon">‚úÖ</div>
        <h3>Tutto Validato!</h3>
        <p>Non ci sono birre in attesa di validazione.</p>
    </div>
    {% endif %}
</div>

<link rel="stylesheet" href="/css/validationBreweries.css">

<style>
.back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    margin-bottom: 2rem;
}

.back-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    color: white;
}

.back-button i {
    font-size: 1rem;
}
</style>

<script>
// Approva birra
async function approveBeer(beerId) {
    if (!confirm('Sei sicuro di voler approvare questa birra?')) return;

    try {
        const response = await fetch(`/administrator/validation/beer/${beerId}/approve`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();

        if (data.success) {
            document.getElementById(`beer-${beerId}`).remove();
            alert('Birra approvata con successo!');
            
            // Ricarica la pagina per aggiornare il conteggio
            location.reload();
        } else {
            alert('Errore durante l\'approvazione: ' + data.error);
        }
    } catch (error) {
        console.error('Errore approvazione:', error);
        alert('Errore durante l\'approvazione della birra');
    }
}

// Modifica birra
function editBeer(beerId) {
    alert('Funzione di modifica birra in arrivo!\nID: ' + beerId);
    // TODO: Implementare modal di modifica birra
}

// Rifiuta birra
async function rejectBeer(beerId) {
    const reason = prompt('Motivo del rifiuto (opzionale):');
    if (reason === null) return;

    try {
        const response = await fetch(`/administrator/validation/beer/${beerId}/reject`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ reason })
        });

        const data = await response.json();

        if (data.success) {
            document.getElementById(`beer-${beerId}`).remove();
            alert('Birra rifiutata ed eliminata');
            
            // Ricarica la pagina per aggiornare il conteggio
            location.reload();
        } else {
            alert('Errore durante il rifiuto: ' + data.error);
        }
    } catch (error) {
        console.error('Errore rifiuto:', error);
        alert('Errore durante il rifiuto della birra');
    }
}
</script>
{% endblock %}
