{% extends "layout.njk" %}

{% block title %}Validazione Birre - Administrator{% endblock %}

{% block content %}
<div class="validation-container">
    <div class="validation-header">
        <h1>üç∫ Validazione Birre</h1>
        <p class="subtitle">Rivedi e approva le birre estratte automaticamente</p>
    </div>

    <!-- Loading spinner -->
    <div id="loadingSpinner" class="loading-spinner">
        <div class="spinner"></div>
        <p>Caricamento birre...</p>
    </div>

    <!-- Lista birre -->
    <div id="beersList" class="beers-list" style="display: none;">
        <!-- Popolato dinamicamente via JavaScript -->
    </div>

    <!-- Empty state -->
    <div id="emptyState" class="empty-state" style="display: none;">
        <div class="empty-icon">‚úÖ</div>
        <h3>Tutto Validato!</h3>
        <p>Non ci sono birre in attesa di validazione.</p>
    </div>
</div>

<link rel="stylesheet" href="/css/validationBreweries.css">

<script>
// Carica birre da validare
async function loadPendingBeers() {
    try {
        document.getElementById('loadingSpinner').style.display = 'block';
        document.getElementById('beersList').style.display = 'none';
        document.getElementById('emptyState').style.display = 'none';

        const response = await fetch('/administrator/validation/beers');
        const data = await response.json();

        document.getElementById('loadingSpinner').style.display = 'none';

        if (data.success && data.beers.length > 0) {
            renderBeers(data.beers);
        } else {
            document.getElementById('emptyState').style.display = 'block';
        }
    } catch (error) {
        console.error('Errore caricamento birre:', error);
        alert('Errore durante il caricamento delle birre');
    }
}

// Render lista birre
function renderBeers(beers) {
    const container = document.getElementById('beersList');
    container.innerHTML = '';
    container.style.display = 'grid';

    beers.forEach(beer => {
        const card = createBeerCard(beer);
        container.appendChild(card);
    });
}

// Crea card birra
function createBeerCard(beer) {
    const card = document.createElement('div');
    card.className = 'brewery-card'; // Riusa stili brewery
    card.id = `beer-${beer._id}`;

    card.innerHTML = `
        <div class="brewery-card-header">
            <div class="brewery-info">
                <h3>${beer.beerName || 'Nome non disponibile'}</h3>
                <p style="color: #666; margin-top: 0.5rem;">Birrificio: ${beer.brewery?.breweryName || 'Sconosciuto'}</p>
            </div>
        </div>
        <div class="brewery-details">
            ${beer.beerType ? `
            <div class="detail-item">
                <span class="detail-icon">üè∑Ô∏è</span>
                <div class="detail-content">
                    <div class="detail-label">Tipo</div>
                    <div class="detail-value">${beer.beerType}</div>
                </div>
            </div>` : ''}
            ${beer.alcoholContent ? `
            <div class="detail-item">
                <span class="detail-icon">üå°Ô∏è</span>
                <div class="detail-content">
                    <div class="detail-label">Gradazione</div>
                    <div class="detail-value">${beer.alcoholContent}%</div>
                </div>
            </div>` : ''}
            ${beer.ibu ? `
            <div class="detail-item">
                <span class="detail-icon">üî¢</span>
                <div class="detail-content">
                    <div class="detail-label">IBU</div>
                    <div class="detail-value">${beer.ibu}</div>
                </div>
            </div>` : ''}
            ${beer.description ? `
            <div class="detail-item" style="grid-column: 1 / -1;">
                <span class="detail-icon">üìù</span>
                <div class="detail-content">
                    <div class="detail-label">Descrizione</div>
                    <div class="detail-value">${beer.description.substring(0, 200)}${beer.description.length > 200 ? '...' : ''}</div>
                </div>
            </div>` : ''}
            ${beer.reviewReason ? `
            <div class="detail-item" style="grid-column: 1 / -1;">
                <span class="detail-icon">‚ö†Ô∏è</span>
                <div class="detail-content">
                    <div class="detail-label">Motivo Revisione</div>
                    <div class="detail-value" style="color: #f5576c;">${beer.reviewReason}</div>
                </div>
            </div>` : ''}
        </div>
        <div class="brewery-actions">
            <button class="btn btn-approve" onclick="approveBeer('${beer._id}')">‚úÖ Approva</button>
            <button class="btn btn-reject" onclick="rejectBeer('${beer._id}')">‚ùå Rifiuta</button>
        </div>
    `;

    return card;
}

// Approva birra
async function approveBeer(beerId) {
    if (!confirm('Sei sicuro di voler approvare questa birra?')) return;

    try {
        const response = await fetch(`/administrator/validation/beer/${beerId}/approve`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();

        if (data.success) {
            document.getElementById(`beer-${beerId}`).remove();
            alert('Birra approvata con successo!');
            loadPendingBeers();
        } else {
            alert('Errore durante l\'approvazione: ' + data.error);
        }
    } catch (error) {
        console.error('Errore approvazione:', error);
        alert('Errore durante l\'approvazione della birra');
    }
}

// Rifiuta birra
async function rejectBeer(beerId) {
    const reason = prompt('Motivo del rifiuto (opzionale):');
    if (reason === null) return;

    try {
        const response = await fetch(`/administrator/validation/beer/${beerId}/reject`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ reason })
        });

        const data = await response.json();

        if (data.success) {
            document.getElementById(`beer-${beerId}`).remove();
            alert('Birra rifiutata ed eliminata');
            loadPendingBeers();
        } else {
            alert('Errore durante il rifiuto: ' + data.error);
        }
    } catch (error) {
        console.error('Errore rifiuto:', error);
        alert('Errore durante il rifiuto della birra');
    }
}

// Carica al load della pagina
document.addEventListener('DOMContentLoaded', loadPendingBeers);
</script>
{% endblock %}
