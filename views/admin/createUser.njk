                </div>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-user-plus"></i>
                Crea Utente
            </button>
        </form>
    </div>
</div>

<script>
// Toggle password visibility
function togglePasswordVisibility(inputId, button) {
    const input = document.getElementById(inputId);
    const icon = button.querySelector('i');
    
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        input.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
}

// Toggle role sections
function toggleRoleSections() {
    const selectedRole = document.querySelector('input[name="role"]:checked').value;
    const sections = document.querySelectorAll('.role-section');
    
    sections.forEach(section => {
        section.classList.remove('active');
    });
    
    const activeSection = document.getElementById(selectedRole + '-section');
    if (activeSection) {
        activeSection.classList.add('active');
    }
}

// Toggle collapsible sections
function toggleSection(sectionId) {
    const content = document.getElementById(sectionId);
    const header = content.previousElementSibling;
    
    content.classList.toggle('collapsed');
    header.classList.toggle('collapsed');
}

// Password strength calculation
function calculatePasswordStrength(password) {
    let strength = 0;
    const fill = document.getElementById('strength-fill');
    const text = document.getElementById('strength-text');
    
    if (password.length >= 8) strength++;
    if (password.length >= 12) strength++;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
    if (/\d/.test(password)) strength++;
    if (/[^a-zA-Z0-9]/.test(password)) strength++;
    
    fill.className = 'strength-fill';
    
    if (password.length === 0) {
        text.textContent = 'Inserisci almeno 8 caratteri';
    } else if (strength <= 1) {
        fill.classList.add('weak');
        text.textContent = 'Password debole';
    } else if (strength === 2) {
        fill.classList.add('fair');
        text.textContent = 'Password sufficiente';
    } else if (strength === 3) {
        fill.classList.add('good');
        text.textContent = 'Password buona';
    } else {
        fill.classList.add('strong');
        text.textContent = 'Password eccellente!';
    }
}

// Form validation helpers
function showError(inputId, message) {
    const input = document.getElementById(inputId);
    const errorDiv = document.getElementById(inputId + '-error');
    
    input.classList.add('is-invalid');
    input.classList.remove('is-valid');
    
    if (errorDiv) {
        errorDiv.querySelector('span').textContent = message;
        errorDiv.style.display = 'flex';
    }
}

function removeError(inputId) {
    const input = document.getElementById(inputId);
    const errorDiv = document.getElementById(inputId + '-error');
    
    input.classList.remove('is-invalid');
    input.classList.add('is-valid');
    
    if (errorDiv) {
        errorDiv.style.display = 'none';
    }
}

// Validate individual input
function validateInput(inputId) {
    const input = document.getElementById(inputId);
    const value = input.value.trim();
    
    switch(inputId) {
        case 'username':
            if (value.length < 3) {
                showError(inputId, 'Username deve avere almeno 3 caratteri');
                return false;
            }
            if (!/^[a-zA-Z0-9_]+$/.test(value)) {
                showError(inputId, 'Username può contenere solo lettere, numeri e underscore');
                return false;
            }
            removeError(inputId);
            return true;
            
        case 'email':
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(value)) {
                showError(inputId, 'Inserisci un indirizzo email valido');
                return false;
            }
            removeError(inputId);
            return true;
            
        case 'password':
            if (value.length < 8) {
                showError(inputId, 'La password deve avere almeno 8 caratteri');
                return false;
            }
            if (!/[A-Z]/.test(value)) {
                showError(inputId, 'La password deve contenere almeno una lettera maiuscola');
                return false;
            }
            if (!/[a-z]/.test(value)) {
                showError(inputId, 'La password deve contenere almeno una lettera minuscola');
                return false;
            }
            if (!/\d/.test(value)) {
                showError(inputId, 'La password deve contenere almeno un numero');
                return false;
            }
            removeError(inputId);
            // Re-validate confirm password if already filled
            const confirmPwd = document.getElementById('confirmPassword');
            if (confirmPwd.value) {
                validateInput('confirmPassword');
            }
            return true;
            
        case 'confirmPassword':
            const password = document.getElementById('password').value;
            if (value !== password) {
                showError(inputId, 'Le password non corrispondono');
                return false;
            }
            removeError(inputId);
            return true;
    }
    
    return true;
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Set initial role section
    toggleRoleSections();
    
    // Add role change listeners
    document.querySelectorAll('input[name="role"]').forEach(radio => {
        radio.addEventListener('change', toggleRoleSections);
    });
    
    // Add password strength listener
    const passwordInput = document.getElementById('password');
    if (passwordInput) {
        passwordInput.addEventListener('input', function() {
            calculatePasswordStrength(this.value);
        });
    }
    
    // Add validation listeners
    ['username', 'email', 'password', 'confirmPassword'].forEach(fieldId => {
        const field = document.getElementById(fieldId);
        if (field) {
            field.addEventListener('blur', function() {
                if (this.value.trim()) {
                    validateInput(fieldId);
                }
            });
        }
    });
    
    // Form submission validation
    const form = document.getElementById('createUserForm');
    if (form) {
        form.addEventListener('submit', function(e) {
            let isValid = true;
            
            // Validate required fields
            ['username', 'email', 'password', 'confirmPassword'].forEach(fieldId => {
                if (!validateInput(fieldId)) {
                    isValid = false;
                }
            });
            
            // Check brewery fields if brewery role selected
            const breweryRole = document.getElementById('role-brewery');
            if (breweryRole && breweryRole.checked) {
                const breweryName = document.getElementById('breweryName');
                if (!breweryName.value.trim()) {
                    showError('breweryName', 'Il nome del birrificio è obbligatorio');
                    isValid = false;
                }
                const breweryFiscalCode = document.getElementById('breweryFiscalCode');
                if (!breweryFiscalCode.value.trim()) {
                    showError('breweryFiscalCode', 'La partita IVA è obbligatoria');
                    isValid = false;
                }
            }
            
            // Check administrator fields if administrator role selected
            const adminRole = document.getElementById('role-administrator');
            if (adminRole && adminRole.checked) {
                const adminName = document.getElementById('administratorName');
                if (!adminName.value.trim()) {
                    showError('administratorName', 'Il nome amministratore è obbligatorio');
                    isValid = false;
                }
                const adminPermission = document.getElementById('administratorPermission');
                if (!adminPermission.value) {
                    showError('administratorPermission', 'Seleziona un livello di permessi');
                    isValid = false;
                }
            }
            
            if (!isValid) {
                e.preventDefault();
                // Scroll to first error
                const firstError = document.querySelector('.is-invalid');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstError.focus();
                }
            }
        });
    }
});
</script>
