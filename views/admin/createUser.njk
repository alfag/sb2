                    </div>
                    <div class="role-option">
                        <input type="radio" name="role" id="role-brewery" value="brewery">
                        <label for="role-brewery">
                            <i class="fas fa-beer-mug-empty"></i>
                            <span>Brewery</span>
                        </label>
                    </div>
                    <div class="role-option">
                        <input type="radio" name="role" id="role-administrator" value="administrator">
                        <label for="role-administrator">
                            <i class="fas fa-shield-halved"></i>
                            <span>Admin</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Sezione Customer -->
