                                       id="beer_name_{{ loop.index }}" 
                                       name="beer_name_{{ loop.index }}" 
                                       class="form-control required {% if beerNameValue %}populated{% else %}missing-required{% endif %}" 
                                       value="{{ beerNameValue }}" 
