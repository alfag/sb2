{% extends "layout.njk" %}

{% block title %}{% if user %}Home{% else %}Benvenuto{% endif %} - SharingBeer 2.0{% endblock %}

{% block head %}
<link rel="stylesheet" href="/css/tailwind-input.css">
<link rel="stylesheet" href="/css/latestReviewsModule.css">
<link rel="stylesheet" href="/css/breweriesModule.css">
<style>
    /* Welcome Page Optimizations */
    .hero-gradient {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #92400e 100%);
    }
    .stat-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .how-it-works-step {
        position: relative;
    }
    .how-it-works-step:not(:last-child)::after {
        content: '';
        position: absolute;
        top: 20px;
        left: calc(100% - 4px);
        width: calc(100% - 24px);
        height: 2px;
        background: linear-gradient(90deg, #f59e0b, #d97706);
        z-index: 0;
    }
    @media (max-width: 640px) {
        .how-it-works-step:not(:last-child)::after {
            top: 20px;
            width: calc(100% - 16px);
        }
    }
    .pulse-soft {
        animation: pulse-soft 2s ease-in-out infinite;
    }
    @keyframes pulse-soft {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.02); }
    }
</style>
{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto px-4 py-6">
    
    {% if user %}
    <!-- ========== HERO PER UTENTI AUTENTICATI ========== -->
    <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900">
                    Ciao {{ user.customerDetails.customerName if user.customerDetails and user.customerDetails.customerName else user.username }}! üëã
                </h1>
                <p class="text-gray-600 mt-1">Pronto a scoprire nuove birre?</p>
            </div>
            {% if 'brewery' in user.role %}
            <a href="/brewery/dashboard" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-lg hover:bg-blue-700 transition-colors">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                </svg>
                Dashboard Birrificio
            </a>
            {% endif %}
        </div>
        
        <!-- Quick Action Card - Recensione -->
        {% if 'customer' in user.role %}
        <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 9a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5 5 5 0 0 1 5-5 5 5 0 0 1 5 5 5 5 0 0 1-5 5m0-12.5C9 4.5 9 4.5 9 4.5l-3 1.5H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-2l-3-1.5S15 4.5 12 4.5z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="font-bold text-lg">Recensisci una birra</h2>
                        <p class="text-sm text-white/80">Scatta una foto, l'AI fa il resto!</p>
                    </div>
                </div>
                <button id="start-review-process" class="px-6 py-3 bg-white text-amber-600 font-bold rounded-xl hover:bg-gray-50 transition-all hover:scale-105 shadow-md whitespace-nowrap">
                    üì∏ Scatta foto
                </button>
            </div>
        </div>
        {% include 'customer/review.njk' %}
        <div id="review-process" class="hidden mt-6 bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div id="ai-feedback" class="mb-4"></div>
            <div id="image-preview" class="mb-4"></div>
            <div id="bottle-ratings" class="mb-4"></div>
            <div class="flex gap-3 justify-end">
                <button id="restart-review" class="px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">Ricomincia</button>
                <button id="publish-review" class="px-4 py-2 bg-amber-500 text-white text-sm font-medium rounded-lg hover:bg-amber-600 transition-colors">Pubblica</button>
            </div>
        </div>
        {% endif %}
    </div>

    {% else %}
    <!-- ========== HERO PER VISITATORI (GUEST) ========== -->
    <div class="hero-gradient text-white rounded-2xl p-6 md:p-10 mb-8 relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
        
