        <h2 class="text-lg font-bold text-gray-900 mb-3">Come funziona</h2>
        <div class="grid grid-cols-3 gap-2 md:gap-3">
            <div class="how-it-works-step bg-white border border-gray-200 rounded-lg p-3 text-center relative z-10 hover:border-amber-300 transition-colors">
                <div class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-2">
                    <span class="text-xl">üì∏</span>
                </div>
                <h3 class="font-bold text-gray-900 text-sm mb-0.5">Scatta</h3>
                <p class="text-xs text-gray-600">Fotografa la birra</p>
            </div>
            <div class="how-it-works-step bg-white border border-gray-200 rounded-lg p-3 text-center relative z-10 hover:border-amber-300 transition-colors">
                <div class="w-10 h-10 bg-amber-200 rounded-full flex items-center justify-center mx-auto mb-2">
                    <span class="text-xl">üîç</span>
                </div>
                <h3 class="font-bold text-gray-900 text-sm mb-0.5">Identifica</h3>
                <p class="text-xs text-gray-600">Riconosciamo la birra</p>
            </div>
            <div class="how-it-works-step bg-white border border-gray-200 rounded-lg p-3 text-center relative z-10 hover:border-amber-300 transition-colors">
                <div class="w-10 h-10 bg-amber-300 rounded-full flex items-center justify-center mx-auto mb-2">
                    <span class="text-xl">‚≠ê</span>
                </div>
                <h3 class="font-bold text-gray-900 text-sm mb-0.5">Valuta</h3>
                <p class="text-xs text-gray-600">Condividi il tuo parere</p>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- ========== ULTIME RECENSIONI ========== -->
    <section class="mb-8" style="max-width: 100%; overflow: hidden;">
        <div class="reviews-section-header">
            <h2 class="text-xl font-bold text-gray-900">Ultime Recensioni</h2>
            <a href="/reviews" class="view-all-reviews-link">
                Vedi tutte
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
        <div id="latest-reviews-list">
            <!-- Dynamic reviews content will be inserted here by latestReviewsModule.js -->
        </div>
    </section>

    <!-- ========== BIRRIFICI ========== -->
    <section class="mb-8 rounded-xl p-4 -mx-4" style="max-width: calc(100% + 2rem); overflow: hidden; background: linear-gradient(135deg, rgba(251, 191, 36, 0.08) 0%, rgba(245, 158, 11, 0.03) 100%);">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                <span class="text-amber-600">üç∫</span> Birrifici
            </h2>
            <a href="/breweries" class="view-all-breweries-link text-sm font-medium text-amber-600 hover:text-amber-700 flex items-center gap-1 transition-colors">
                Vedi tutti
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
