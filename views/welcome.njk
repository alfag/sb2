                    <div class="text-2xl font-bold" id="stat-beers">200+</div>
                    <div class="text-xs text-white/70">Birre</div>
                </div>
            </div>
        </div>
    </div>
    
    {% include 'customer/review.njk' %}
    <div id="review-process" class="hidden mb-8 bg-gray-50 rounded-lg p-4 border border-gray-200">
        <div id="ai-feedback" class="mb-4"></div>
        <div id="image-preview" class="mb-4"></div>
        <div id="bottle-ratings" class="mb-4"></div>
        <div class="flex gap-3 justify-end">
            <button id="restart-review" class="px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">Ricomincia</button>
