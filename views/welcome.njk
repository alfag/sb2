        <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-lg p-4 shadow-lg">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-3">
                <div class="flex items-center gap-3">
                    <div class="text-2xl">üéâ</div>
                    <div>
                        <h3 class="text-base font-bold">Unisciti a SharingBeer</h3>
                        <p class="text-xs text-white/90">Salva le tue recensioni e segui i birrifici</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a href="/register" class="px-4 py-2 bg-white text-orange-600 text-sm font-bold rounded-lg hover:bg-gray-50 transition-colors shadow-md">
                        Registrati
                    </a>
                    <a href="/login" class="px-4 py-2 border-2 border-white text-white text-sm font-semibold rounded-lg hover:bg-white hover:text-orange-600 transition-colors">
                        Accedi
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- ========== FEATURES - Solo per guest ========== -->
