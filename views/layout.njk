    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    
    <!-- CSS Framework (Bootstrap) -->
    <link href="/css/libs/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/libs/fontawesome-7.0.1.min.css">
    
    <!-- Tailwind CSS Framework (Standalone Local) -->
    <script src="/js/tailwind-standalone.js"></script>
    
    <!-- Tailwind Custom Components SharingBeer -->
    <link rel="stylesheet" href="/css/tailwind-custom.css">
    
    <!-- Design System -->
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/layout.css?v=5">
    
