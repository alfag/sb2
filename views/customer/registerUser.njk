{% extends "../layout.njk" %}

{% block title %}Registrati - SharingBeer 2.0{% endblock %}

{% block content %}
<!-- Modern Auth Container -->
<div class="auth-container">
    <div class="auth-card">
        <!-- Header with Brand -->
        <div class="auth-header">
            <div class="brand-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="currentColor"/>
                </svg>
            </div>
            <h1 class="auth-title">Unisciti a noi</h1>
            <p class="auth-subtitle">Crea il tuo account gratuito su SharingBeer</p>
            <p class="required-note">* Campi obbligatori</p>
        </div>

        <!-- Registration Form -->
        <form id="registerForm" class="auth-form" method="post" action="/register" novalidate>
            <!-- Account Credentials -->
            <div class="form-section">
                <h3 class="section-title">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
                    </svg>
                    Credenziali Account
                </h3>
                
                <div class="form-group">
                    <label for="username" class="form-label">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="currentColor"/>
                        </svg>
                        Email *
                    </label>
                    <input type="email" id="username" name="username" class="form-input" placeholder="Inserisci la tua email" required>
                    <small class="form-hint">Utilizzerai questa email per accedere al tuo account</small>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18,8h-1V6c0-2.76-2.24-5-5-5S7,3.24,7,6v2H6c-1.1,0-2,0.9-2,2v10c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V10C20,8.9,19.1,8,18,8z M12,17c-1.1,0-2-0.9-2-2s0.9-2,2-2s2,0.9,2,2S13.1,17,12,17z M15.1,8H8.9V6c0-1.71,1.39-3.1,3.1-3.1s3.1,1.39,3.1,3.1V8z" fill="currentColor"/>
                        </svg>
                        Password *
                    </label>
                    <div class="password-input-wrapper">
                        <input type="password" id="password" name="password" class="form-input" placeholder="Crea una password sicura" required>
                        <button type="button" class="password-toggle" id="togglePassword" aria-label="Mostra/nascondi password" onclick="togglePasswordVisibility()">
                            <svg class="eye-open" id="eyeOpen" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" fill="currentColor"/>
                            </svg>
                            <svg class="eye-closed" id="eyeClosed" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" fill="currentColor"/>
                            </svg>
                        </button>
                    </div>
                    <script>
                    function togglePasswordVisibility() {
                        var pwd = document.getElementById('password');
                        var eyeOpen = document.getElementById('eyeOpen');
                        var eyeClosed = document.getElementById('eyeClosed');
                        if (pwd.type === 'password') {
                            pwd.type = 'text';
                            eyeOpen.style.display = 'none';
                            eyeClosed.style.display = 'block';
                        } else {
                            pwd.type = 'password';
                            eyeOpen.style.display = 'block';
                            eyeClosed.style.display = 'none';
                        }
                    }
                    </script>
                    <div class="password-strength">
                        <div class="strength-meter">
                            <div class="strength-bar"></div>
                        </div>
                        <small class="strength-text">Usa almeno 8 caratteri con lettere e numeri</small>
                    </div>
                </div>
            </div>

            <!-- Hidden role field -->
            <input type="hidden" id="role" name="role" value="customer">

            <!-- Personal Information -->
            <div class="form-section" id="customerDetails">
                <h3 class="section-title">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 5.5V6.5C15 7.3 14.3 8 13.5 8H10.5C9.7 8 9 7.3 9 6.5V5.5L3 7V9H21ZM18 10H6C4.9 10 4 10.9 4 12V22H7V19H17V22H20V12C20 10.9 19.1 10 18 10Z" fill="currentColor"/>
                    </svg>
                    Informazioni Personali
                </h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="customerName" class="form-label">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z" fill="currentColor"/>
                            </svg>
                            Nome *
                        </label>
                        <input type="text" id="customerName" name="customerName" class="form-input" placeholder="Il tuo nome" required>
                    </div>
                    <div class="form-group">
                        <label for="customerSurname" class="form-label">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z" fill="currentColor"/>
                            </svg>
                            Cognome *
                        </label>
                        <input type="text" id="customerSurname" name="customerSurname" class="form-input" placeholder="Il tuo cognome" required>
                    </div>
                </div>

                {# Task 21: Rimosso campo Codice Fiscale dalla registrazione #}
                <div class="form-row">
                    <div class="form-group">
                        <label for="customerPhoneNumber" class="form-label">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z" fill="currentColor"/>
                            </svg>
                            Telefono <span class="optional-label">(Opzionale)</span>
                        </label>
                        <input type="tel" id="customerPhoneNumber" name="customerPhoneNumber" class="form-input" placeholder="+39 123 456 7890">
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="form-section">
                <h3 class="section-title section-collapsible" onclick="toggleSection('addresses')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" fill="currentColor"/>
                    </svg>
                    Indirizzi (Opzionale)
                    <svg class="chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M7.41 8.58L12 13.17l4.59-4.59L18 10l-6 6-6-6 1.41-1.42z" fill="currentColor"/>
                    </svg>
                </h3>
                
                <div class="section-content" id="addresses-content">
                    <div class="form-group">
                        <label for="customerBillingAddress" class="form-label">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" fill="currentColor"/>
                            </svg>
                            Indirizzo di Fatturazione
                        </label>
                        <input type="text" id="customerBillingAddress" name="customerBillingAddress" class="form-input" placeholder="Via Roma 123, 00100 Roma RM">
                    </div>
                    <div class="form-group">
                        <label for="customerShippingAddress" class="form-label">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3,4A2,2 0 0,0 1,6V17H3A3,3 0 0,0 6,20A3,3 0 0,0 9,17H15A3,3 0 0,0 18,20A3,3 0 0,0 21,17H23V12L20,8H17V4M10,6L14,10L10,14V11H4V9H10M6,15.5A1.5,1.5 0 0,1 7.5,17A1.5,1.5 0 0,1 6,18.5A1.5,1.5 0 0,1 4.5,17A1.5,1.5 0 0,1 6,15.5M18,15.5A1.5,1.5 0 0,1 19.5,17A1.5,1.5 0 0,1 18,18.5A1.5,1.5 0 0,1 16.5,17A1.5,1.5 0 0,1 18,15.5Z" fill="currentColor"/>
                            </svg>
                            Indirizzo di Spedizione
                        </label>
                        <input type="text" id="customerShippingAddress" name="customerShippingAddress" class="form-input" placeholder="Se diverso dall'indirizzo di fatturazione">
                        <div class="checkbox-wrapper">
                            <input type="checkbox" id="sameAddress" onchange="copySameAddress()">
                            <label for="sameAddress" class="checkbox-label">Usa lo stesso indirizzo per la spedizione</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Terms and Privacy -->
            <div class="form-section">
                <div class="terms-checkbox-container">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="terms" name="termsAccepted" required>
                        <label for="terms" class="checkbox-label">
                            Accetto i <a href="/terms" target="_blank" class="auth-link">Termini di Servizio</a> 
                            e l'<a href="/privacy" target="_blank" class="auth-link">Informativa sulla Privacy</a> *
                        </label>
                    </div>
                    <div class="terms-error-container"></div>
                </div>
                <div class="checkbox-wrapper">
                    <input type="checkbox" id="newsletter" name="newsletterSubscription">
                    <label for="newsletter" class="checkbox-label">
                        Desidero ricevere newsletter e aggiornamenti sui prodotti (opzionale)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-full">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" fill="currentColor"/>
                </svg>
                Crea Account Gratuito
            </button>
        </form>

        <!-- Login Link -->
        <div class="auth-footer">
            <p>Hai già un account? 
                <a href="/login" class="auth-link">Accedi qui</a>
            </p>
        </div>
    </div>
</div>

<!-- Modern Auth Styles - Consistent with Login Page -->
<style>
.auth-container {
    min-height: calc(100vh - var(--navbar-height) - var(--footer-height));
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-6) var(--space-4);
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 50%, #d97706 100%);
    position: relative;
}

.auth-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    opacity: 0.5;
}

.auth-card {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
    padding: var(--space-8);
    width: 100%;
    max-width: 600px; /* Più largo per la registrazione */
    position: relative;
    z-index: 1;
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.auth-header {
    text-align: center;
    margin-bottom: var(--space-4);
}

.brand-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 50%, #d97706 100%);
    border-radius: var(--radius-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-2);
    color: var(--color-white);
    box-shadow: var(--shadow-lg);
}

.auth-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-gray-900);
    margin: 0 0 var(--space-2) 0;
}

.auth-subtitle {
    color: var(--color-gray-600);
    font-size: var(--text-base);
    margin: 0;
}

.auth-form {
    margin-bottom: var(--space-4);
}

.form-group {
    margin-bottom: var(--space-4);
}

.form-label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: var(--font-medium);
    color: var(--color-gray-700);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
}

.optional-label {
    font-weight: var(--font-normal);
    color: var(--color-gray-500);
    font-size: var(--text-xs);
    font-style: italic;
}

.required-note {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    margin-top: var(--space-2);
    font-style: italic;
}

.form-input {
    width: 100%;
    height: 48px;
    padding: 0 var(--space-4);
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    background: var(--color-white);
    transition: all var(--transition-base);
}

.form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    transform: translateY(-1px);
}

.form-input::placeholder {
    color: var(--color-gray-400);
}

.password-input-wrapper {
    position: relative;
}

.password-input-wrapper .form-input {
    padding-right: 48px; /* Spazio per il toggle */
}

.password-toggle {
    position: absolute;
    right: var(--space-3);
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-gray-400);
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--radius-md);
    transition: color var(--transition-fast);
    z-index: 2; /* Sopra l'input */
}

.password-toggle:hover {
    color: var(--color-gray-600);
    background-color: var(--color-gray-100);
}

.btn-full {
    width: 100%;
    justify-content: center;
    gap: var(--space-2);
    height: 48px;
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
}

.auth-footer {
    text-align: center;
    border-top: 1px solid var(--color-gray-100);
    padding-top: var(--space-4);
}

.auth-footer p {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    margin: 0;
}

.auth-link {
    color: var(--color-primary);
    font-weight: var(--font-medium);
    text-decoration: none;
    transition: color var(--transition-fast);
}

.auth-link:hover {
    color: var(--color-primary-hover);
}

/* Registration-specific styles */
.form-section {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--color-gray-100);
}

.form-section:last-of-type {
    border-bottom: none;
    margin-bottom: var(--space-3);
}

.auth-form .section-title {
    display: flex !important;
    align-items: center !important;
    gap: var(--space-2) !important;
    font-size: 0.875rem !important;
    font-weight: 700 !important;
    color: #78350f !important;
    -webkit-text-fill-color: #78350f !important;
    margin: 0 0 var(--space-3) 0 !important;
    text-transform: uppercase !important;
    letter-spacing: 0.08em !important;
    padding: var(--space-2) var(--space-3) !important;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 50%, #fcd34d 100%) !important;
    -webkit-background-clip: unset !important;
    background-clip: unset !important;
    border-radius: var(--radius-lg) !important;
    border-left: 4px solid #f59e0b !important;
    box-shadow: 0 2px 8px rgba(245, 158, 11, 0.2) !important;
    position: relative !important;
}

.auth-form .section-title svg {
    fill: #d97706 !important;
    color: #d97706 !important;
    -webkit-text-fill-color: #d97706 !important;
    opacity: 1 !important;
}

.section-collapsible {
    cursor: pointer;
    user-select: none;
    justify-content: flex-start !important;
    padding: var(--space-2);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
}

.section-collapsible:hover {
    background: var(--color-gray-50);
}

.section-collapsible .chevron {
    transition: transform var(--transition-base);
    margin-left: auto;
}

.section-collapsible.collapsed .chevron {
    transform: rotate(-90deg);
}

.section-content {
    overflow: hidden;
    transition: all var(--transition-base);
}

.section-content.collapsed {
    max-height: 0;
    opacity: 0;
    margin: 0;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
}

.form-hint {
    display: block;
    color: var(--color-gray-500);
    font-size: var(--text-xs);
    margin-top: var(--space-1);
}

.password-strength {
    margin-top: var(--space-2);
}

.strength-meter {
    height: 4px;
    background: var(--color-gray-200);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: var(--space-1);
}

.strength-bar {
    height: 100%;
    width: 0%;
    background: var(--color-error);
    transition: all var(--transition-base);
    border-radius: var(--radius-full);
}

.strength-bar.weak { background: var(--color-error); width: 25%; }
.strength-bar.fair { background: var(--color-warning); width: 50%; }
.strength-bar.good { background: var(--color-info); width: 75%; }
.strength-bar.strong { background: var(--color-success); width: 100%; }

.strength-text {
    color: var(--color-gray-500);
    font-size: var(--text-xs);
}

.checkbox-wrapper {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
}

.checkbox-wrapper input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin: 0;
    flex-shrink: 0;
    margin-top: 2px;
}

.checkbox-wrapper input[type="checkbox"].error {
    outline: 2px solid var(--color-error);
    outline-offset: 1px;
}

.terms-checkbox-container {
    display: flex;
    flex-direction: column;
}

.terms-error-container .terms-error {
    color: #ef4444;
    font-size: 0.75rem;
    margin-top: 0.25rem;
    display: block;
}

.checkbox-label {
    font-size: var(--text-sm);
    color: var(--color-gray-700);
    line-height: 1.5;
    margin: 0;
}

.form-input.error {
    border-color: var(--color-error);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

@media (max-width: 639px) {
    .auth-container {
        padding: var(--space-4) var(--space-3);
    }
    
    .auth-card {
        padding: var(--space-6);
        max-width: 100%;
    }
    
    .brand-icon {
        width: 60px;
        height: 60px;
    }
    
    .auth-title {
        font-size: var(--text-2xl);
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
}
</style>

<!-- Enhanced Registration Script - Consistent with Login -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Password visibility toggle - DEVE essere all'inizio
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');
    
    if (togglePassword && passwordInput) {
        togglePassword.addEventListener('click', function(e) {
            e.preventDefault();
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            
            // Toggle eye icons
            const eyeOpen = this.querySelector('.eye-open');
            const eyeClosed = this.querySelector('.eye-closed');
            
            if (type === 'text') {
                eyeOpen.style.display = 'none';
                eyeClosed.style.display = 'block';
            } else {
                eyeOpen.style.display = 'block';
                eyeClosed.style.display = 'none';
            }
        });
    }
    
    // Password strength checker
    const strengthBar = document.querySelector('.strength-bar');
    const strengthText = document.querySelector('.strength-text');
    passwordInput.addEventListener('input', function() {
        const password = this.value;
        const strength = calculatePasswordStrength(password);
        
        strengthBar.className = `strength-bar ${strength.level}`;
        strengthText.textContent = strength.text;
    });

    function calculatePasswordStrength(password) {
        let score = 0;
        let level = 'weak';
        let text = 'Password troppo debole';

        if (password.length >= 8) score += 1;
        if (password.match(/[a-z]/)) score += 1;
        if (password.match(/[A-Z]/)) score += 1;
        if (password.match(/[0-9]/)) score += 1;
        if (password.match(/[^a-zA-Z0-9]/)) score += 1;

        if (score >= 4) {
            level = 'strong';
            text = 'Password molto sicura';
        } else if (score >= 3) {
            level = 'good';
            text = 'Password buona';
        } else if (score >= 2) {
            level = 'fair';
            text = 'Password discreta';
        }

        return { level, text };
    }

    // Enhanced form validation - consistent with login
    const form = document.getElementById('registerForm');
    const inputs = form.querySelectorAll('.form-input');
    
    inputs.forEach(input => {
        input.addEventListener('blur', validateInput);
        input.addEventListener('input', clearErrors);
    });
    
    // Listener per rimuovere errore quando checkbox termini viene spuntato
    const termsCheckbox = document.getElementById('terms');
    termsCheckbox.addEventListener('change', function() {
        if (this.checked) {
            this.classList.remove('error');
            const termsContainer = this.closest('.terms-checkbox-container');
            const termsError = termsContainer.querySelector('.terms-error');
            if (termsError) termsError.remove();
        }
    });
    
    form.addEventListener('submit', function(e) {
        let isValid = true;
        let firstErrorInput = null;
        
        inputs.forEach(input => {
            if (!validateInput({ target: input })) {
                isValid = false;
                if (!firstErrorInput) {
                    firstErrorInput = input;
                }
            }
        });
        
        // Validazione checkbox termini e privacy (obbligatorio)
        const termsCheckbox = document.getElementById('terms');
        const termsContainer = termsCheckbox.closest('.terms-checkbox-container');
        const termsErrorContainer = termsContainer.querySelector('.terms-error-container');
        let termsError = termsContainer.querySelector('.terms-error');
        
        if (!termsCheckbox.checked) {
            isValid = false;
            termsCheckbox.classList.add('error');
            if (!termsError) {
                termsError = document.createElement('small');
                termsError.className = 'terms-error';
                termsErrorContainer.appendChild(termsError);
            }
            termsError.textContent = 'Devi accettare i Termini di Servizio e l\'Informativa sulla Privacy per registrarti';
            
            if (!firstErrorInput) {
                firstErrorInput = termsCheckbox;
            }
        } else {
            termsCheckbox.classList.remove('error');
            if (termsError) termsError.remove();
        }
        
        if (!isValid) {
            e.preventDefault();
            // Scroll al primo campo con errore
            if (firstErrorInput) {
                firstErrorInput.scrollIntoView({ behavior: 'smooth', block: 'center' });
                firstErrorInput.focus();
            }
        }
    });
    
    function validateInput(e) {
        const input = e.target;
        const value = input.value.trim();
        
        // Remove existing error styles
        input.classList.remove('error');
        
        // Helper per mostrare/rimuovere messaggi di errore
        function showError(input, message, errorClass) {
            input.classList.add('error');
            // Per il campo password, il parent è password-input-wrapper, serve il grandparent
            let container = input.parentElement;
            if (input.id === 'password') {
                container = input.parentElement.parentElement;
            }
            let errorMsg = container.querySelector('.' + errorClass);
            if (!errorMsg) {
                errorMsg = document.createElement('small');
                errorMsg.className = errorClass + ' form-error';
                errorMsg.style.color = '#ef4444';
                errorMsg.style.display = 'block';
                errorMsg.style.marginTop = '0.25rem';
                errorMsg.style.fontSize = '0.75rem';
                // Per il campo password, inserisci dopo il password-strength
                if (input.id === 'password') {
                    const strengthDiv = container.querySelector('.password-strength');
                    if (strengthDiv) {
                        strengthDiv.insertAdjacentElement('afterend', errorMsg);
                    } else {
                        container.appendChild(errorMsg);
                    }
                } else {
                    container.appendChild(errorMsg);
                }
            }
            errorMsg.textContent = message;
        }
        
        function removeError(input, errorClass) {
            let container = input.parentElement;
            if (input.id === 'password') {
                container = input.parentElement.parentElement;
            }
            const errorMsg = container.querySelector('.' + errorClass);
            if (errorMsg) errorMsg.remove();
        }
        
        // Validazione campi obbligatori con messaggi specifici
        if (input.required && !value) {
            input.classList.add('error');
            
            // Messaggi specifici per campo
            if (input.id === 'customerName') {
                showError(input, 'Il nome è obbligatorio', 'name-error');
            } else if (input.id === 'customerSurname') {
                showError(input, 'Il cognome è obbligatorio', 'surname-error');
            } else if (input.id === 'username') {
                showError(input, 'L\'email è obbligatoria', 'email-error');
            } else if (input.id === 'password') {
                showError(input, 'La password è obbligatoria', 'password-error');
            }
            return false;
        } else {
            // Rimuovi errori se campo compilato
            if (input.id === 'customerName') removeError(input, 'name-error');
            if (input.id === 'customerSurname') removeError(input, 'surname-error');
            if (input.id === 'password') removeError(input, 'password-error');
        }
        
        // Validazione email per il campo username
        if (input.id === 'username' && value) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(value)) {
                showError(input, 'Inserisci un indirizzo email valido', 'email-error');
                return false;
            } else {
                removeError(input, 'email-error');
            }
        }
        
        return true;
    }
    
    function clearErrors(e) {
        e.target.classList.remove('error');
    }

    // Initialize collapsed sections
    toggleSection('addresses');
});

// Collapsible sections
function toggleSection(sectionId) {
    const content = document.getElementById(sectionId + '-content');
    const title = content.previousElementSibling;
    
    if (content.classList.contains('collapsed')) {
        content.classList.remove('collapsed');
        title.classList.remove('collapsed');
    } else {
        content.classList.add('collapsed');
        title.classList.add('collapsed');
    }
}

// Copy billing address to shipping address
function copySameAddress() {
    const sameAddress = document.getElementById('sameAddress');
    const billingAddress = document.getElementById('customerBillingAddress');
    const shippingAddress = document.getElementById('customerShippingAddress');
    
    if (sameAddress.checked) {
        shippingAddress.value = billingAddress.value;
        shippingAddress.disabled = true;
    } else {
        shippingAddress.disabled = false;
    }
}
